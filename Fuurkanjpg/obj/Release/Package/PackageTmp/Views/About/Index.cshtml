@using Fuurkanjpg.Models.Siniflar
@model List<Hakkimda>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!doctype html>
<html lang="zxx">



<body>
    <!-- header -->

    <section class="w3l-index3 bg-grey">
        <div class="midd-w3 py-5">
            <div class="container py-lg-5 py-md-3">
                <div class="row">
                    <div class="col-lg-6 pr-lg-5">
                        <br /><br />
                        @foreach (var x in Model)
                        {
                            <img src="@x.HakkimdaFoto" alt="" class="img-fluid radius-image">
                        }
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-md-5 mt-4 about-right-faq align-self">
                        <h3 class="hny-title">Furkan Yaşar</h3>
                        @foreach (var x in Model)
                        {
                            <p class="mt-3">
                                @x.HakkimdaYazi
                            </p>
                        }
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- stats -->


</body>

</html>